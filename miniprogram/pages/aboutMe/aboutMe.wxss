/* miniprogram/pages/aboutMe/aboutMe.wxss */
.container{
  background-color: rgb(95, 189, 243);
  display: flex;
  height: 250px;
  justify-content: space-around;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: flex-start;

}
.infoDetail{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.userinfo-avatar {
  width: 200rpx;
  height: 200rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.welcome{
  font-size: 25px;
  text-shadow: 5px 5px 5px #a9ddf5;
  color: rgb(255, 253, 253);
}
.userinfo-nickname {
  background-color:transparent;
  color: rgba(255, 253, 253, 0);
  font-size: 20px;
  vertical-align: auto;
}
.a1{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.text-grey{
  font-size: medium;
  color: #000000;
}
.content{
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 35px;
}

.usermotto {
  margin-top: 200px;
}
.nickName{
  min-width: 100px;
  min-height: 40px;
  font-size: 30px;
  color: #ffffff;
  
}